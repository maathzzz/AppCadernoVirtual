<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCadernoVirtual.App">
    
    <Application.Resources>
        
        <!-- Padrão de estilo utilizado nos botões de imagens -->
        <Style x:Key="BtnMaterias" TargetType="ImageButton">
            <Setter Property="Aspect" Value="Fill" />
            <Setter Property="BorderColor" Value="#305CFF" />
            <Setter Property="BorderWidth" Value="3" />
        </Style>

        <!-- Padrão de estilo utilizado nos botões normais -->
        <Style x:Key="BtnPadrao" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#A8B9FA" />
            <Setter Property="BorderColor" Value="#305CFF" />
            <Setter Property="BorderRadius" Value="20"/>
            <Setter Property="BorderWidth" Value="2" />
        </Style>

        <!-- Padrão de estilo utilizado no background da aplicação -->
        <Style x:Key="Fundo" TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="#305CFF"/>
            <Setter Property="BackgroundColor" Value="#2f2f30" /> 
        </Style>

    </Application.Resources>
</Application>